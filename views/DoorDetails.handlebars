<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/assets/img/LogoSmartBot.png" type="image/x-icon">
    <title>Smartbot</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gray-900 sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-icon">
                    <img class="img-fluid px-3 px-sm-4 mt-1 mb-1" src="/assets/img/LogoSmartBot.png" alt="logo"
                        style="width: 10rem;">
                </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->

            <li class="nav-item active">
                <a onclick="back()" class="nav-link" href="#">
                    <i class="fas fa-home"></i>Inicio</a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading mt-2">
                <span style="font-weight: 900; color:#fff">Recopilar detalles de puerta con fecha</span>
            </div>
            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item p-1">
                <div class="col-auto">
                    <label for="inicio" class="col-form-label">Fecha Inicio</label>
                </div>
                <div class="col-auto">
                    <input type="date" name="inicio" id="initDate" class="form-control text-center">
                </div>
            </li>
            <li class="nav-item p-1">
                <div class="col-auto">
                    <label for="final" class="col-form-label">Fecha Término</label>
                </div>
                <div class="col-auto ">
                    <input type="date" name="final" id="endDate" class="mr-auto form-control text-center">
                </div>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <li class="nav-item">
                <div class="col-auto p-1 mt-3 text-center">
                    <button onclick="renderDoorTable()" class="btn bg-gradient-warning text-gray-900 m-2">Ver
                        Detalles</button>
                </div>
            </li>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" class="bg-dark">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-dark bg-gradient-warning topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Navbar -->
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-light">Entel - Darío Urzúa</h1>
                    </div>
                    <!-- Content Row -->

                    <div id="infoPuerta" class="row">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card border-left-dark shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                                Mayor cantidad de tiempo puerta abierta</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{max}} segs. - {{fechaMax}}</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-stopwatch fa-2x" style="color:gold"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card border-left-dark shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                                                Cantidad total apertura de puerta</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{count}} veces</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-door-open fa-2x" style="color:saddlebrown"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div id="door" class="d-none vh-100">
                        <div class="text-center">
                            <h5 class="p-4 mt-3 text-white">Detalles Estado Puerta</h5>
                        </div>
                        <div id="doorInfo"></div>
                        <div class="text-center p-4">
                            <a href="#" id="btn-historic" onclick="back()" class="btn btn-success">Volver</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-gradient-warning">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span style="color:lightcyan">Copyright &copy; Smartbot 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- End of Content Wrapper -->

    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="/assets/js/axios.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/scripts/sb-admin-2.js"></script>

    <!-- Page level plugins -->
    <script src="/assets/js/chart.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="/scripts/renderDoorTable.js"></script>

</body>

</html>